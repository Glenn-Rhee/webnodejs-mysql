<div class="container-contact">
  <div class="body-contact">
    <div class="title">
      <h4>Let's Get In Touch!</h4>
    </div>
    <div class="subtitle">
      <p>
        Ready to start your next project with us? Send us a messages and we will
        get back to you as soon as possible!
      </p>
    </div>
    <div class="main-contact">
      <% if (typeof dataError != "undefined") { %>
      <div class="form-error">
        <ul>
          <% dataError.forEach(error => { %>
          <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %> <% if(typeof message !== "undefined") {%>
      <div class="form-succes">
        <h4><%= message %></h4>
      </div>
      <% } %>

      <form action="/contact" method="post" autocomplete="off" id="contact">
        <% if (typeof data !== "undefined") { %>
        <div class="input-group">
          <div class="form-error-fe"><h5>Please fill your name</h5></div>
          <input
            type="text"
            name="name"
            id="name"
            value="<%= data.name %>"
            placeholder="Your Name..."
          />
        </div>
        <div class="input-group">
          <div class="form-error-fe">
            <h5>Please fill your email address</h5>
          </div>
          <input
            type="email"
            name="email"
            id="email"
            value="<%= data.email %>"
            placeholder="example@gmail.com"
          />
        </div>
        <div class="input-group">
          <input
            type="tel"
            name="phoneNumber"
            id="noTelp"
            value="<%= data.phoneNumber %>"
            placeholder="Phone Number"
          />
        </div>
        <div class="input-group">
          <div class="form-error-fe"><h5>Please fill your message</h5></div>
          <textarea
            name="message"
            id="message"
            value="<%= data.message %>"
            cols="20"
            rows="10"
            placeholder="Your message here..."
          ></textarea>
        </div>
        <% } else { %>
        <div class="input-group">
          <div class="form-error-fe"><h5>Please fill your name</h5></div>
          <input type="text" name="name" id="name" placeholder="Your Name..." />
        </div>
        <div class="input-group">
          <div class="form-error-fe">
            <h5>Please fill your email address</h5>
          </div>
          <input
            type="email"
            name="email"
            id="email"
            placeholder="example@gmail.com"
          />
        </div>
        <div class="input-group">
          <input
            type="tel"
            name="phoneNumber"
            id="noTelp"
            placeholder="Phone Number"
          />
        </div>
        <div class="input-group">
          <div class="form-error-fe"><h5>Please fill your message</h5></div>
          <textarea
            name="message"
            id="message"
            cols="20"
            rows="10"
            placeholder="Your message here..."
          ></textarea>
        </div>
        <% } %>
        <div class="submit-button">
          <button type="submit" id="submit" class="disable" disabled>
            Submit
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
